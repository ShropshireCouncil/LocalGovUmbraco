{
  "$schema": "appsettings-schema.json",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    }
  },
  "Umbraco": {
    "Contentment": {
      "DisableTelemetry": true
    },
    "CMS": {
      "Hosting": {
        "Debug": true
      },
      "Runtime": {
        "Mode": "Development"
      },
      "ModelsBuilder": {
        "ModelsMode": "SourceCodeAuto"
      },
      "Global": {
        "SanitizeTinyMce": true,
        "UseHttps": true,
        "TimeOut": "12:00:00",
        "DefaultUILanguage": "en-GB",
        "MainDomLock": "SqlMainDomLock",
        "InstallMissingDatabase": true,
        "VersionCheckPeriod": 0,
        "Id": "ea62894e-817a-4dcf-bf05-fcebb145479c"
      },
      "Content": {
        "AllowEditInvariantFromNonDefault": true,
        "ContentVersionCleanupPolicy": {
          "EnableCleanup": true
        },
        "Error404Collection": [
          {
            "Culture": "default",
            "ContentXPath": "//errorPage[1]"
          }
        ]
      },
      "Indexing": {
        "ExplicitlyIndexEachNestedProperty": true
      },
      "RuntimeMinification": {
        "UseInMemoryCache": false,
        "CacheBuster": "AppDomain",
        "KeepFileExtensions": true
      },
      "RichTextEditor": {
        "CustomConfig": {
          "inline_styles": "false",
          "invalid_styles": "all",
          "invalid_elements": "u,strike",
          "remove_trailing_brs": "false",
          "content_security_policy": "default-src 'self'",
          "content_css": "/core/css/defaults.css,/core/css/gds.css,/core/css/typography.css",
          "extended_valid_elements": "svg[*],path[*],line[*],circle[*],g[*],polygon[*],mark,code",
          "formats": "{\"alignleft\":{\"selector\":\"p,h1,h2,h3,h4,h5,h6,td,th,div,ul,ol,li,table,img\",\"classes\":\"left\",\"exact\":true},\"aligncenter\":{\"selector\":\"p,h1,h2,h3,h4,h5,h6,td,th,div,ul,ol,li,table,img\",\"classes\":\"center\",\"exact\":true},\"alignright\":{\"selector\":\"p,h1,h2,h3,h4,h5,h6,td,th,div,ul,ol,li,table,img\",\"classes\":\"right\",\"exact\":true},\"list-ul-disc\":{\"selector\":\"ul\",\"attributes\":{\"data-style\":\"disc\"},\"exact\":true},\"list-ul-circle\":{\"selector\":\"ul\",\"attributes\":{\"data-style\":\"circle\"},\"exact\":true},\"list-ul-square\":{\"selector\":\"ul\",\"attributes\":{\"data-style\":\"square\"},\"exact\":true},\"list-ol-arabic\":{\"selector\":\"ol\",\"attributes\":{\"data-style\":\"arabic\"},\"exact\":true},\"list-ol-roman\":{\"selector\":\"ol\",\"attributes\":{\"data-style\":\"roman\"},\"exact\":true},\"list-ol-alpha\":{\"selector\":\"ol\",\"attributes\":{\"data-style\":\"alpha\"},\"exact\":true},\"button\":{\"selector\":\"a\",\"classes\":\"button\"}}",
          "style_formats": "[{\"title\":\"Headings\",\"items\":[{\"title\":\"Heading 1\",\"block\":\"h1\"},{\"title\":\"Heading 2\",\"block\":\"h2\"},{\"title\":\"Heading 3\",\"block\":\"h3\"},{\"title\":\"Heading 4\",\"block\":\"h4\"},{\"title\":\"Heading 5\",\"block\":\"h5\"},{\"title\":\"Heading 6\",\"block\":\"h6\"}]},{\"title\":\"Blocks\",\"items\":[{\"title\":\"Paragraph\",\"block\":\"p\"},{\"title\":\"Preformatted Text\",\"block\":\"pre\"},{\"title\":\"Blockquote\",\"block\":\"blockquote\",\"wrapper\":true}]},{\"title\":\"Inline\",\"items\":[{\"title\":\"Bold\",\"inline\":\"strong\"},{\"title\":\"Italic\",\"inline\":\"em\"},{\"title\":\"Strikethrough\",\"inline\":\"s\"},{\"title\":\"Superscript\",\"inline\":\"sup\"},{\"title\":\"Subscript\",\"inline\":\"sub\"},{\"title\":\"Code\",\"inline\":\"code\"},{\"title\":\"Mark\",\"inline\":\"mark\"}]},{\"title\":\"Align\",\"items\":[{\"title\":\"Left\",\"format\":\"alignleft\"},{\"title\":\"Center\",\"format\":\"aligncenter\"},{\"title\":\"Right\",\"format\":\"alignright\"}]},{\"title\":\"Bullet styles\",\"items\":[{\"title\":\"Arabic Numerals (0-9)\",\"format\":\"list-ol-arabic\"},{\"title\":\"Roman Numerals (i, iv, x)\",\"format\":\"list-ol-roman\"},{\"title\":\"Alphabetical (a-z)\",\"format\":\"list-ol-alpha\"}]},{\"title\":\"Link styles\",\"items\":[{\"title\":\"Button\",\"format\":\"button\"}]}]",
          "style_formats_merge": "false",
          "advlist_bullet_styles": "default",
          "advlist_number_styles": "default"
        }
      }
    }
  },
  "uSync": {
    "Settings": {
      "ImportOnFirstBoot": true,
      "ImportAtStartup": "Settings",
      "EnableHistory": true
    }
  },
  "ConnectionStrings": {
    "umbracoDbDSN": "Data Source=|DataDirectory|/Umbraco.sqlite.db;Cache=Shared;Foreign Keys=True;Pooling=True",
    "umbracoDbDSN_ProviderName": "Microsoft.Data.Sqlite"
  }
}
